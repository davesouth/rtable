= form_with(model: domain) do |form|
  - if domain.errors.any?
    %div{ style: 'color: red' }
      %h2
        = pluralize(domain.errors.count, 'error')
        prohibited this domain from being saved:
      %ul
        - domain.errors.each do |error|
          %li= error.full_message
  %p
    = form.label :slug, style: 'display: block'
    = form.text_field :slug, { disabled: @domain.persisted? }
  %p
    = form.label :name, style: 'display: block'
    = form.text_field :name
  %p
    = form.submit
