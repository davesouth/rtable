%h1 New card

= form_with model: @card do |f|
  = display_form_errors(f.object)

  %p.field
    = f.label :category_id
    = f.select :category_id, Category.cards.collect{ |c| [c.name, c.id] }, prompt: 'Select categoryâ€¦'

  %p.field
    = f.label :name
    = f.text_field :name

  %p.actions
    = f.submit 'Save'


= link_to 'Back', :cards
