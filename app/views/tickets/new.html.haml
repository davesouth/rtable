%h1 New ticket

= form_with model: @ticket do |f|
  - display_form_errors(f.object)

  %p.field
    = f.label :category_id
    = f.select :category_id, Category.tickets.collect{ |c| [c.name, c.id] }, prompt: 'Select categoryâ€¦'

  %p.field
    = f.label :name
    = f.text_field :name

  %p.actions
    = f.submit 'Save'

= link_to 'Back', :tickets
