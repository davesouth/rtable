= form_for [@account, @category] do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message

  %p.field
    = f.label :name
    = f.text_field :name
  %p.field
    = f.label :slug
    = f.text_field :slug
  %p.field
    = f.label :kind
    = f.select :kind, Category::KINDS, include_blank: true
  %p.actions
    = f.submit 'Save'
